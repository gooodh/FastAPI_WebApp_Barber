server {
    listen 443 ssl;
    server_name ferum-dsg.duckdns.org;  # Замените на ваш домен или IP

    ssl_certificate /etc/letsencrypt/live/ferum-dsg.duckdns.org/fullchain.pem;  # Путь к вашему SSL-сертификату
    ssl_certificate_key /etc/letsencrypt/live/ferum-dsg.duckdns.org/privkey.pem;  # Путь к вашему приватному ключу

    # Обработка вебхука Telegram
    location /barber {
        proxy_pass http://127.0.0.1:8000;  # Порт, на котором работает ваше приложение
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;

        # Опционально: добавьте следующие строки для улучшения работы с WebSocket
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
    }

    # Обработка корневого адреса для вашего веб-приложения
    location / {
        proxy_pass http://127.0.0.1:8000;  # Порт, на котором работает ваше веб-приложение
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
}

# Рекомендуется также добавить конфигурацию для HTTP (порт 80), чтобы перенаправлять на HTTPS
server {
    listen 80;
    server_name ferum-dsg.duckdns.org;

    return 301 https://$host$request_uri;  # Перенаправление на HTTPS
}
